<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.hospitalapp_arbellayglassey">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_hospital_hdpi"
        android:label="@string/main_activity_title"
        android:roundIcon="@drawable/ic_logo_hospital_hdpi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listActivity.ListOfPatientActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".listActivity.ListOfMedecineActivity" />
        <activity android:name=".medecine.MedecineDetails" />
        <activity android:name=".medecine.MedecineAdd" />
        <activity android:name=".medecine.MedecineModify" />
        <activity android:name=".patient.PatientDetails" />
        <activity android:name=".patient.PatientAdd" />
        <activity android:name=".patient.PatientModify" />
        <activity android:name=".treatment.TreatmentDetails" />
        <activity android:name=".medecine.MedecineAddSearchList" />
        <activity android:name=".settings.Settings" />
        <activity android:name=".treatment.TreatmentModify" />
        <activity android:name=".settings.SettingsAbout" />
        <activity android:name=".settings.SettingsLanguage" />
        <activity android:name=".settings.SettingsTheme"></activity>
    </application>

</manifest>