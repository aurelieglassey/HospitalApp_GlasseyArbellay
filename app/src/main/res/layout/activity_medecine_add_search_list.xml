<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_add_medecine_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppBackgroud"
    android:orientation="horizontal"
    tools:context=".medecine.MedecineAddSearchList">

    <!-- Frame layout-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtlistofmedecineSearchList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/label_list_of_medecine"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorGreyButton"
                android:textSize="12sp" />

            <!-- List of the medecine -->
            <ListView
                android:id="@+id/listofmedecinesearchlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </ListView>

        </LinearLayout>

    </FrameLayout>

    <!-- Nav bar-->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view_add_medecine_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/nav_drawer" />


</android.support.v4.widget.DrawerLayout>